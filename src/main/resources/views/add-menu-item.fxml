<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.AddMenuItemController" stylesheets="@css/admin-theme.css">
    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Add New Menu Item" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="nameField" promptText="Item Name" />
            <TextField fx:id="priceField" promptText="Price" />
            <TextField fx:id="categoryField" promptText="Category" />
            <TextField fx:id="availabilityField" promptText="Availability (e.g., Available, Out of Stock)" />

            <HBox spacing="10">
                <Button fx:id="saveButton" text="Save" onAction="#handleSave" />
                <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
