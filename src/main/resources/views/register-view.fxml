<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.controllers.RegisterController"
      alignment="CENTER"
      spacing="15"
      stylesheets="@css/register.css"
      style="-fx-background-color: #2c3e50; -fx-padding: 20px; -fx-pref-width: 400px; -fx-pref-height: 500px;">

    <Label text="Register" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />

    <TextField fx:id="fullNameField" promptText="Full Name" style="-fx-pref-width: 250px;" />
    <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 250px;" />
    <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 250px;" />
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 250px;" />

    <Button text="Register" fx:id="registerButton" onAction="#handleRegister"
            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 250px;" />

    <Button text="Back to Login" onAction="#goToLogin"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 250px;" />

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />
</VBox>

