<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<GridPane fx:controller="main.controllers.EditMenuItemController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10" stylesheets="@css/admin-theme.css" prefWidth="400" prefHeight="300">

    <Label text="Edit Menu Item" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
        <Button fx:id="handleSave" text="Save" onAction="#handleSave"/>
        <Button fx:id="handleCancel" text="Cancel" onAction="#handleCancel"/>
    </HBox>

</GridPane>
